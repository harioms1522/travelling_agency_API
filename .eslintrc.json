{
  "extends": ["airbnb", "prettier", "plugin:node/recommended"],
  "plugins": ["prettier"],
  "rules": {
    // "prettier/prettier": "error",
    "prettier/prettier": "off",
    "spaced-comment": "off",
    "no-console": "warn", //eslint doesnt want use to log the information
    "consistent-return": "off", //each and every function must return sth
    "func-names": "off", //every function must have a name
    "object-shorthand": "off",
    "no-process-exit": "off",
    "no-dynamic-require": "off",
    "no-param-reassign": "off",
    "no-return-await": "off",
    "no-underscore-dangle": "off",
    "class-methods-use-this": "off",
    "prefer-destructuring": ["error", { "object": true, "array": false }],
    "no-unused-vars": ["error", { "argsIgnorePattern": "req|res|next|val" }] //we dont want any error for these variables
  }
}
